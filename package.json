    "gh-pages": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup": "^2.79.2",
    "rollup-plugin-dts": "^5.1.0",
