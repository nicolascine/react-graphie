    "d3-force": "^3.0.0",
    "d3-geo": "^3.0.0",
    "d3-scale": "^4.0.0",
    "d3-scale-chromatic": "^3.0.0",
    "d3-selection": "^3.0.0",
    "d3-shape": "^3.0.0",
    "d3-svg-legend": "^2.25.6",
    "d3-transition": "^3.0.0"
