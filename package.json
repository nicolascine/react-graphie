  "author": "NicolÃ¡s Silva",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nicolascine/react-graphie"
  },
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "engines": {
    "node": ">=14",
    "npm": ">=7"
  },
  "scripts": {
